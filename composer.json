{
    "name": "technote/laravel-reservation-management-system",
    "type": "project",
    "license": "GPL-2.0+",
    "description": "Reservation management system",
    "homepage": "https://github.com/technote-space/laravel-reservation-management-system",
    "keywords": [
        "reservation"
    ],
    "authors": [
        {
            "name": "Technote",
            "email": "technote.space@gmail.com",
            "homepage": "https://technote.space"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "fideloper/proxy": "^4.0",
        "laravel/framework": "5.8.*",
        "laravel/tinker": "^1.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.2",
        "barryvdh/laravel-ide-helper": "^2.6",
        "beyondcode/laravel-dump-server": "^1.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
        "doctrine/dbal": "^2.9",
        "filp/whoops": "^2.0",
        "fzaninotto/faker": "^1.4",
        "laravel/dusk": "^5.3",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^3.0",
        "php-coveralls/php-coveralls": "^2.1",
        "phpmd/phpmd": "^2.6",
        "phpunit/phpunit": "^7.5",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/dusk"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-update-cmd": [
            "php artisan ide-helper:generate",
            "php artisan optimize"
        ],
        "setup": [
            "composer install",
            "yarn install"
        ],
        "build": [
            "composer install --no-dev",
            "yarn install",
            "yarn prod"
        ],
        "test": [
            "@setup",
            "@stage-lint",
            "@stage-test"
        ],
        "stage-lint": [
            "@phpcs",
            "@phpmd",
            "@eslint",
            "@stylelint"
        ],
        "stage-test": [
            "@jest",
            "@phpunit",
            "@dusk"
        ],
        "phpcs": [
            "phpcs --standard=./phpcs.xml"
        ],
        "phpmd": [
            "phpmd ./app/,./config,./routes/,./tests/ text phpmd.xml"
        ],
        "phpunit": [
            "phpunit"
        ],
        "dusk": [
            "php artisan dusk"
        ],
        "eslint": [
            "yarn lint"
        ],
        "jest": [
            "yarn cover"
        ],
        "stylelint": [
            "yarn stylelint"
        ],
        "coveralls-php": [
            "php-coveralls -v"
        ],
        "coveralls-js": [
            "yarn coveralls"
        ],
        "migrate": [
            "php artisan migrate --seed"
        ],
        "ide": [
            "php artisan ide-helper:generate",
            "php artisan ide-helper:models",
            "php artisan ide-helper:meta"
        ],
        "update-packages": [
            "ncu -u",
            "yarn --audit install",
            "composer update"
        ],
        "gh-releases": [
            "@build",
            "TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) source bin/deploy/env.sh && bash bin/deploy/gh-releases.sh"
        ]
    }
}
