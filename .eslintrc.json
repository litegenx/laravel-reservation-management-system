{
    "extends": [
        "vue",
        "plugin:vue/recommended"
    ],
    "env": {
        "browser": true,
        "jest": true
    },
    "rules": {
        "semi": [
            2,
            "always"
        ],
        "indent": [
            "error",
            4
        ],
        "vue/html-indent": [
            "error",
            4
        ],
        "vue/script-indent": [
            "error",
            4,
            {
                "baseIndent": 1,
                "switchCase": 1
            }
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ]
    },
    "overrides": [
        {
            "files": [
                "*.vue"
            ],
            "rules": {
                "indent": "off"
            }
        }
    ],
    "globals": {
        "Vue": true,
        "siteParams": true
    }
}
